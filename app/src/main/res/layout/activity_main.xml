<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp">

    </FrameLayout>

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false" />

    <TextView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@android:color/holo_blue_dark"
        android:clickable="false"
        android:cursorVisible="false"
        android:editable="false"
        android:gravity="center_vertical"
        android:text="SafeDrive"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonUploadTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Button"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_centerHorizontal="true"


        android:layout_centerVertical="false"
        android:layout_marginBottom="5dp"
        android:background="@drawable/box"
        android:clickable="false"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingBottom="0dp"
        android:text="Scansiona il QRCode"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:typeface="sans"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.TextView.PopupMenu"
        android:layout_width="307dp"
        android:layout_height="385dp"


        android:layout_centerInParent="true"
        android:background="@drawable/box"
        android:clickable="false"
        android:cursorVisible="false"
        android:enabled="false"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:text="Scansiona il QRCode"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:typeface="sans"
        android:visibility="visible" />

    <TextView
        android:id="@+id/status_message_text_view_id"
        android:layout_width="314dp"
        android:layout_height="195dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Status: STATUS_MSG"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>